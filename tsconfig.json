{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "typeRoots": ["node_modules/@types"],
  },
  "include": [
      "src/**/*"
  ]
}
